@model IEnumerable<Mono.Models.VehicleMake>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.makeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.makeAbrv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.makeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.makeAbrv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.makeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.makeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.makeId })
        </td>
    </tr>
}

</table>
